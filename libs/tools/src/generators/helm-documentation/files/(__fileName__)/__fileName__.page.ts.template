import type { RouteMeta } from '@analogjs/router';
import { Component, computed, inject } from '@angular/core';
import { PrimitiveSnippetsService } from 'grg-ui-ui/app/app/core/services/primitive-snippets.service';
import { hlmCode, hlmH4 } from 'grg-ui-ui/helm/typography';
import { CodePreview } from '../../../../shared/code/code-preview';
import { Code } from '../../../../shared/code/code';
import { MainSection } from '../../../../shared/layout/main-section';
import { PageBottomNavPlaceholder } from '../../../../shared/layout/page-bottom-nav-placeholder';
import { PageBottomNavLink } from '../../../../shared/layout/page-bottom-nav/page-bottom-nav-link';
import { PageBottomNav } from '../../../../shared/layout/page-bottom-nav/page-bottom-nav';
import { PageNav } from '../../../../shared/layout/page-nav/page-nav';
import { SectionIntro } from '../../../../shared/layout/section-intro';
import { SectionSubHeading } from '../../../../shared/layout/section-sub-heading';
import { TabsCli } from '../../../../shared/layout/tabs-cli';
import { Tabs } from '../../../../shared/layout/tabs';
import { metaWith } from '../../../../shared/meta/meta.util';
import { UIApiDocs } from 'grg-ui-ui/app/app/shared/layout/ui-docs-section/ui-docs-section';
import { <%= previewComponentName %>, defaultImports, defaultSkeleton } from './<%= fileName %>.preview';

export const routeMeta: RouteMeta = {
	data: { breadcrumb: '<%= name %>', api: '<%= name %>' },
	meta: metaWith(
		'grg-ui/ui - <%= name %>',
		'<%= description %>',
	),
	title: 'grg-ui/ui - <%= name %>',
};

@Component({
	selector: 'grg-ui-<%= fileName %>',
imports: [
		MainSection,
		Code,
		SectionIntro,
		SectionSubHeading,
		Tabs,
		TabsCli,
		<%= previewComponentName %>,
		CodePreview,
		PageNav,
		PageBottomNav,
		PageBottomNavLink,
		PageBottomNavPlaceholder,
		UIApiDocs,

	],
	template: `
		<section spartanMainSection>
			<grg-ui-section-intro
				name="<%= name %>"
				lead="<%= description %>"
			/>

			<grg-ui-tabs firstTab="Preview" secondTab="Code">
				<div spartanCodePreview firstTab>
					<grg-ui-<%= fileName %>-preview />
				</div>
				<grg-ui-code secondTab [code]="_defaultCode()" />
			</grg-ui-tabs>

			<grg-ui-section-sub-heading id="installation">Installation</grg-ui-section-sub-heading>
			<grg-ui-cli-tabs
				class="mt-4"
				nxCode="npx nx g grg-ui-ui/cli:ui <%= name %>"
				ngCode="ng g grg-ui-ui/cli:ui <%= name %>"
			/>

			<grg-ui-section-sub-heading id="usage">Usage</grg-ui-section-sub-heading>
			<div class="space-y-4">
				<grg-ui-code [code]="_imports" />
				<grg-ui-code [code]="_codeSkeleton" />
			</div>

			<grg-ui-section-sub-heading id="brn-api">Brain API</grg-ui-section-sub-heading>
      <grg-ui-ui-api-docs docType="brain" />

      <grg-ui-section-sub-heading id="hlm-api">Helm API</grg-ui-section-sub-heading>
      <grg-ui-ui-api-docs docType="helm" />

			<grg-ui-page-bottom-nav>
				<grg-ui-page-bottom-nav-link href="alert" label="Alert" />
				<grg-ui-page-bottom-nav-placeholder />
			</grg-ui-page-bottom-nav>
		</section>
		<grg-ui-page-nav />
	`,
})
export default class <%= pageComponentName %> {
	private readonly _snippets = inject(PrimitiveSnippetsService).getSnippets('<%= name %>');
	protected readonly _defaultCode = computed(() => this._snippets()['default']);
	protected readonly _imports = defaultImports;
	protected readonly _codeSkeleton = defaultSkeleton;
}
